<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/white"
        app:cardCornerRadius="@dimen/dp_10">

    <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_5">

        <TextView
                style="@style/item_title_bg"
                android:text="管理设置" />

        <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:background="@color/listBgCol" />

        <com.xuexiang.xui.widget.alpha.XUIAlphaLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal"
                android:padding="@dimen/dp_5">

            <ImageView
                    style="@style/item_imageView_name"
                    android:src="@drawable/js_images_work_icon_work_attendance" />

            <TextView
                    style="@style/item_textView_name"
                    android:text="考勤管理" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right">

                <ImageView
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="wrap_content"
                        android:src="@drawable/iconjinru" />
            </LinearLayout>
        </com.xuexiang.xui.widget.alpha.XUIAlphaLinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:background="@color/listBgCol" />

        <com.xuexiang.xui.widget.alpha.XUIAlphaLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal"
                android:padding="@dimen/dp_5">

            <ImageView
                    style="@style/item_imageView_name"
                    android:src="@drawable/js_images_work_icon_work_approve" />

            <TextView
                    style="@style/item_textView_name"
                    android:text="审批管理" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right">

                <ImageView
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="wrap_content"
                        android:src="@drawable/iconjinru" />
            </LinearLayout>
        </com.xuexiang.xui.widget.alpha.XUIAlphaLinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:background="@color/listBgCol" />

        <com.xuexiang.xui.widget.alpha.XUIAlphaLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal"
                android:padding="@dimen/dp_5">

            <ImageView
                    style="@style/item_imageView_name"
                    android:src="@drawable/js_images_work_icon_work_employee" />

            <TextView
                    style="@style/item_textView_name"
                    android:text="员工管理" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right">

                <ImageView
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="wrap_content"
                        android:src="@drawable/iconjinru" />
            </LinearLayout>
        </com.xuexiang.xui.widget.alpha.XUIAlphaLinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:background="@color/listBgCol" />

        <com.xuexiang.xui.widget.alpha.XUIAlphaLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal"
                android:padding="@dimen/dp_5">

            <ImageView
                    style="@style/item_imageView_name"
                    android:src="@drawable/js_images_work_icon_work_salary" />

            <TextView
                    style="@style/item_textView_name"
                    android:text="薪资管理" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right">

                <ImageView
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="wrap_content"
                        android:src="@drawable/iconjinru" />
            </LinearLayout>
        </com.xuexiang.xui.widget.alpha.XUIAlphaLinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>