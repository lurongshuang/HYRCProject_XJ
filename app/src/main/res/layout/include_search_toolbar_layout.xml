<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ll_toolbar_layout_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42"
        android:background="@color/colorPrimary"
        android:fitsSystemWindows="false"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

    <com.hyrc99.projectByL.utils.view.FontIconView
            android:id="@+id/iv_leftIcon_search"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center"
            android:text="@string/iconfanhui"
            android:textColor="@color/TitleColor"
            android:textColorHint="#03A9F4"
            android:textSize="@dimen/sp_16" />

    <EditText
            android:id="@+id/etSearch_search"
            style="@style/EditText.Normal"
            android:layout_width="@dimen/dp_250"
            android:layout_height="@dimen/dp_30"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/edittext_ex_item"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:textColor="@color/white"
            android:textColorHint="@color/search_bg_stroke"
            android:textCursorDrawable="@drawable/include_edittext_hint"
            android:textSize="@dimen/sp_14" />

    <TextView
            android:id="@+id/tv_rightText_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center"
            android:text="搜索"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />
</RelativeLayout>