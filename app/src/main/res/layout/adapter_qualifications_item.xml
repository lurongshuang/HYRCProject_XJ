<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_0_5"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/tvSpecty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="XXXXXX"
                android:textColor="@color/listTitleColor"
                android:textSize="@dimen/sp_15" />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_5">

        <TextView
                android:id="@+id/tvCertId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="证书号：B221009861"
                android:textColor="@color/login_hint_color"
                android:textSize="@dimen/sp_14" />


        <TextView
                android:id="@+id/tvApvm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="类别：勘察"
                android:textColor="@color/login_hint_color"
                android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_5">


        <TextView
                android:id="@+id/tvGrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="等级：甲级"
                android:textColor="@color/login_hint_color"
                android:textSize="@dimen/sp_14" />

        <TextView
                android:id="@+id/tvVtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="有效期：2020-12-05"
                android:textColor="@color/login_hint_color"
                android:textSize="@dimen/sp_14" />
    </LinearLayout>
</LinearLayout>