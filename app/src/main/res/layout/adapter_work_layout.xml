<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <LinearLayout
            android:layout_width="@dimen/dp_32"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <RelativeLayout
                android:id="@+id/rlTimeline"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:id="@+id/tvTopLine"
                    android:layout_width="@dimen/dp_2"
                    android:layout_height="@dimen/dp_12"
                    android:layout_centerHorizontal="true"
                    android:background="@color/primaryShallow"
                    android:visibility="gone" />

            <TextView
                    android:id="@+id/tvDot"
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_10"
                    android:layout_below="@id/tvTopLine"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/timelline_dot_normal" />

            <TextView
                    android:layout_width="@dimen/dp_2"
                    android:layout_height="match_parent"
                    android:layout_below="@id/tvDot"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="0dp"
                    android:background="@color/primaryShallow" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <ImageView
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_marginTop="@dimen/dp_10"
                android:src="@drawable/js_images_icon_index_start" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="上班打卡"
                    android:textColor="@color/siginInColor"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold" />

            <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@drawable/work_state_bg"
                    android:text="正常"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="打卡时间 "
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/sp_12" />

            <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="09:36:05"
                    android:textColor="@color/color_55d4dc"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="bold" />
        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/singinLeaveLigtColor" />
    </LinearLayout>
</LinearLayout>